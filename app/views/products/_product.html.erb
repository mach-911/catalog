<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Size:</strong>
    <%= product.size %>
  </p>
  <strong>Categories:</strong>
  <br>
  <% product.categories.each do |c| %>
   <span><%= c.name %></span>
  <% end %>
</div>
